<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/dinglan_orange"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/dinglan_orange"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/head_left_btn"
            style="@style/LeftImageStyle" />

        <TextView
            android:id="@+id/tv_dinglan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:layout_centerInParent="true"
            android:textColor="@color/WHITE"
            android:textSize="@dimen/activity_head_center_s" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lin_reset_password"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg"
        android:orientation="vertical"
        android:visibility="visible" >

        <LinearLayout
            android:id="@+id/lin_oldpassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_edittext_normal"
            android:gravity="left|center"
            android:orientation="horizontal"
            android:padding="5dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="45dp"
                android:text="旧密码"
                android:textColor="@color/wt_login_third"
                android:textSize="@dimen/activity_head_right" />

            <EditText
                android:id="@+id/edit_oldpassword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/WHITE"
                android:ems="10"
                android:gravity="left|center"
                android:hint="请输入当前密码"
                android:maxLines="1"
                android:password="true"
                android:singleLine="true"
                android:textColor="@color/wt_login_third"
                android:textColorHint="@color/beijing"
                android:textCursorDrawable="@drawable/wt_edittext_cursor"
                android:textSize="@dimen/activity_head_right" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_edittext_normal"
            android:gravity="left|center"
            android:orientation="horizontal"
            android:padding="5dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="45dp"
                android:text="新密码"
                android:textColor="@color/wt_login_third"
                android:textSize="@dimen/activity_head_right" />

            <EditText
                android:id="@+id/edit_newpassword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/WHITE"
                android:ems="10"
                android:gravity="left|center"
                android:hint="请输入6-10位数字或字母"
                android:maxLines="1"
                android:password="true"
                android:singleLine="true"
                android:textColor="@color/wt_login_third"
                android:textColorHint="@color/beijing"
                android:textCursorDrawable="@drawable/wt_edittext_cursor"
                android:textSize="@dimen/activity_head_right" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_edittext_normal"
            android:gravity="left|center"
            android:orientation="horizontal"
            android:padding="5dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="30dp"
                android:text="确认密码"
                android:textColor="@color/wt_login_third"
                android:textSize="@dimen/activity_head_right" />

            <EditText
                android:id="@+id/edit_confirmpassword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/WHITE"
                android:ems="10"
                android:gravity="left|center"
                android:hint="请再次输入密码"
                android:maxLines="1"
                android:password="true"
                android:singleLine="true"
                android:textColor="@color/wt_login_third"
                android:textColorHint="@color/beijing"
                android:textCursorDrawable="@drawable/wt_edittext_cursor"
                android:textSize="@dimen/activity_head_right" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_modifypassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/zhuxiao_press"
            android:text="提交"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/WHITE"
            android:textSize="@dimen/activity_head_right" />

    </LinearLayout>

</LinearLayout>