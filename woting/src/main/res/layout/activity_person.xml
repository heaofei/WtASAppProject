<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <!--用户登录状态-->
    <RelativeLayout
        android:id="@+id/lin_status_denglu"
        android:layout_width="match_parent"
        android:background="@color/WHITE"
        android:layout_height="177dp"
        android:visibility="visible" >

        <LinearLayout
            android:id="@+id/view_background"
            android:layout_width="match_parent"
            android:layout_height="87.5dp"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/d_person_background_left"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/d_person_background_right"/>

        </LinearLayout>

        <!--<ImageView-->
        <!--android:id="@+id/lin_image"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:scaleType="centerCrop" />-->

        <ImageView
            android:id="@+id/imageView_ewm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="14dp"
            android:src="@mipmap/ewm_white" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:maxWidth="200dp"
            android:text="小茉莉"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/lin_xiugai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:scaleType="centerCrop"
            android:layout_alignParentRight="true"
            android:layout_marginTop="14dp"
            android:src="@mipmap/image_edit_profile" />

        <ImageView
            android:id="@+id/image_touxiang"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/liubianxing_orange" />

        <LinearLayout
            android:id="@+id/linear_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/wt_login_third"
            android:layout_below="@id/image_touxiang"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:textSize="13sp">

            <TextView
                android:id="@+id/text_user_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京东城"
                android:textColor="@color/wt_login_third"
                android:textSize="14sp" />

            <View
                android:id="@+id/circle_view"
                android:layout_width="2dp"
                android:layout_height="2dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/d_circle_black"/>

            <TextView
                android:id="@+id/text_user_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID  (123456)"
                android:textColor="@color/wt_login_third"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/text_user_autograph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/wt_login_third"
            android:layout_below="@id/linear_user"
            android:layout_centerHorizontal="true"
            android:textSize="14sp" />

        <View
            style="@style/ViewStyle"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

    <!--用户未登录状态-->
    <RelativeLayout
        android:id="@+id/lin_status_nodenglu"
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:background="@color/WHITE"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/d_person_background_left"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/d_person_background_right"/>

        </LinearLayout>

        <!--<ImageView-->
        <!--android:id="@+id/lin_image_0"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:scaleType="centerCrop" />-->

        <!--<TextView-->
        <!--android:id="@+id/text_denglu"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="14dp"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:text="登 录"-->
        <!--android:textColor="@color/WHITE"-->
        <!--android:textSize="17sp" />-->

        <ImageView
            android:id="@+id/image_nodenglu"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/person_nologinimage" />

        <TextView
            android:id="@+id/text_denglu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击登录"
            android:textColor="@color/wt_login_third"
            android:textSize="17sp"
            android:layout_marginTop="7dp"
            android:layout_below="@id/image_nodenglu"
            android:layout_centerHorizontal="true"/>

        <View
            style="@style/ViewStyle"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/lin_playhistory"
                style="@style/PersonAndSetRelativeStyle"
                android:layout_marginTop="20dp">

                <View style="@style/ViewStyle" />

                <ImageView
                    android:id="@+id/image_play_history"
                    style="@style/PersonAndSetLeftStyle"
                    android:src="@mipmap/wt_person_playhistory" />

                <TextView
                    android:layout_width="wrap_content"
                    style="@style/PersonAndSetTextStyle"
                    android:text="播放历史"
                    android:layout_toRightOf="@id/image_play_history"/>

                <ImageView style="@style/PersonAndSetRightStyle" />

                <View
                    android:id="@+id/view_line"
                    style="@style/ViewStyle"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lin_like"
                style="@style/PersonAndSetRelativeStyle">

                <View style="@style/LineStyle"/>

                <ImageView
                    android:id="@+id/image_like"
                    style="@style/PersonAndSetLeftStyle"
                    android:src="@mipmap/wt_person_like" />

                <TextView
                    style="@style/PersonAndSetTextStyle"
                    android:text="我喜欢的"
                    android:layout_toRightOf="@id/image_like" />

                <ImageView style="@style/PersonAndSetRightStyle" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lin_anchor"
                style="@style/PersonAndSetRelativeStyle">

                <View style="@style/LineStyle"/>

                <ImageView
                    android:id="@+id/image_anchor"
                    style="@style/PersonAndSetLeftStyle"
                    android:src="@mipmap/wt_image_follow" />

                <TextView
                    style="@style/PersonAndSetTextStyle"
                    android:text="我的关注"
                    android:layout_toRightOf="@id/image_anchor" />

                <ImageView style="@style/PersonAndSetRightStyle" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lin_subscribe"
                style="@style/PersonAndSetRelativeStyle">

                <View style="@style/LineStyle"/>

                <ImageView
                    android:id="@+id/image_subscribe"
                    style="@style/PersonAndSetLeftStyle"
                    android:src="@mipmap/wt_image_subscribe" />

                <TextView
                    style="@style/PersonAndSetTextStyle"
                    android:text="我的订阅"
                    android:layout_toRightOf="@id/image_subscribe" />

                <ImageView style="@style/PersonAndSetRightStyle" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lin_album"
                style="@style/PersonAndSetRelativeStyle">

                <View style="@style/LineStyle"/>

                <ImageView
                    android:id="@+id/image_album"
                    style="@style/PersonAndSetLeftStyle"
                    android:src="@mipmap/wt_image_album" />

                <TextView
                    style="@style/PersonAndSetTextStyle"
                    android:text="我的上传"
                    android:layout_toRightOf="@id/image_album" />

                <ImageView style="@style/PersonAndSetRightStyle" />

                <View
                    style="@style/ViewStyle"
                    android:layout_alignParentBottom="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lin_timer"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:visibility="gone"
                android:background="@drawable/person_color" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/view_color" />

                <ImageView
                    android:id="@+id/image_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/wt_person_timer" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:text="定时关闭"
                    android:layout_toRightOf="@id/image_timer"
                    android:layout_centerVertical="true"
                    android:textColor="@color/wt_login_third"
                    android:textSize="@dimen/list_text_size" />

                <ImageView
                    android:id="@+id/image_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="13dp"
                    android:src="@mipmap/live_more" />

                <TextView
                    android:id="@+id/text_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/image_more"
                    android:layout_marginRight="6dp"
                    android:layout_centerVertical="true"
                    android:text="00:00"
                    android:textColor="@color/wt_login_third"
                    android:textSize="13sp"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lin_liuliang"
                style="@style/PersonAndSetRelativeStyle"
                android:layout_marginTop="20dp">

                <View style="@style/ViewStyle" />

                <ImageView
                    android:id="@+id/image_liuliang"
                    style="@style/PersonAndSetLeftStyle"
                    android:src="@mipmap/wt_person_liuliang" />

                <TextView
                    style="@style/PersonAndSetTextStyle"
                    android:text="2/3/4G网络播放和下载提醒"
                    android:layout_toRightOf="@id/image_liuliang" />

                <ImageView
                    android:id="@+id/wt_img_toggle"
                    style="@style/PersonAndSetRightStyle"
                    android:src="@mipmap/wt_person_close" />

                <View
                    style="@style/ViewStyle"
                    android:layout_alignParentBottom="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lin_hardware"
                style="@style/PersonAndSetRelativeStyle"
                android:layout_marginTop="20dp">

                <View style="@style/ViewStyle" />

                <ImageView
                    android:id="@+id/image_hardware"
                    style="@style/PersonAndSetLeftStyle"
                    android:src="@mipmap/wt_image_hardware" />

                <TextView
                    style="@style/PersonAndSetTextStyle"
                    android:text="智能硬件"
                    android:layout_toRightOf="@id/image_hardware" />

                <ImageView style="@style/PersonAndSetRightStyle" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lin_app"
                style="@style/PersonAndSetRelativeStyle">

                <View style="@style/LineStyle"/>

                <ImageView
                    android:id="@+id/image_app"
                    style="@style/PersonAndSetLeftStyle"
                    android:src="@mipmap/wt_image_app_shape" />

                <TextView
                    style="@style/PersonAndSetTextStyle"
                    android:text="应用分享"
                    android:layout_toRightOf="@id/image_app" />

                <ImageView style="@style/PersonAndSetRightStyle" />

                <View
                    style="@style/ViewStyle"
                    android:layout_alignParentBottom="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lin_set"
                style="@style/PersonAndSetRelativeStyle"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="20dp">

                <View style="@style/ViewStyle"/>

                <ImageView
                    android:id="@+id/image_set"
                    style="@style/PersonAndSetLeftStyle"
                    android:src="@mipmap/wt_person_set" />

                <TextView
                    style="@style/PersonAndSetTextStyle"
                    android:text="其它设置"
                    android:layout_toRightOf="@id/image_set" />

                <ImageView style="@style/PersonAndSetRightStyle" />

                <View
                    style="@style/ViewStyle"
                    android:layout_alignParentBottom="true" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>