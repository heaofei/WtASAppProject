<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/setting_bg_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="81dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:background="@color/WHITE"
            android:gravity="left|center"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/img_cover"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:gravity="center_vertical"
                android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:gravity="left|center"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_classify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:singleLine="true"
        android:text="分类分类"
        android:padding="2dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/color_wt_circle_orange_white_live"
        android:textColor="@color/dinglan_orange"
        android:textSize="8sp" />
    <TextView
        android:id="@+id/NameOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:singleLine="true"
        android:text="展示名称"
        android:textColor="@color/dinglan_orange"
        android:textSize="@dimen/activity_head_right" />
</LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="5dp"
                    android:gravity="left|center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_anchor"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginRight="6dp"
                        android:src="@mipmap/image_program_anchor" />

                    <TextView
                        android:id="@+id/NameTwo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="未知"
                        android:textColor="@color/beijing"
                        android:textSize="@dimen/text_size_13"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center">
                    <ImageView
                        android:id="@+id/image_num"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@mipmap/image_program_listener" />

                    <TextView
                        android:id="@+id/tv_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:singleLine="true"
                        android:text="130.2万"
                        android:textColor="@color/beijing"
                        android:textSize="9sp" />
                    <ImageView
                        android:id="@+id/image_time"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@mipmap/image_program_time" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="19:00——21:00"
                        android:textColor="@color/beijing"
                        android:textSize="9sp" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:id="@+id/image_isShow"
            android:layout_width="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_height="15dp"
            android:layout_marginRight="20dp" />
        <TextView
            android:id="@+id/time_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50:00"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/dinglan_orange"
            android:textSize="@dimen/text_size_13"
            android:visibility="visible" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_color" />

</LinearLayout>