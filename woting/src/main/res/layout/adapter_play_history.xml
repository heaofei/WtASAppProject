<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_check"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:background="@color/WHITE"
        android:gravity="left|center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lin_check"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/wt_group_nochecked"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp">

            <ImageView
                android:id="@+id/RankImageUrl"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/img_zhezhao"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="13dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/RankTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:singleLine="true"
                android:text="我听之声我听之声我听之声我听之声我听之声我听之声"
                android:layout_marginRight="10dp"
                android:textColor="@color/dinglan_orange"
                android:textSize="15sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left|center">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginRight="6dp"
                    android:src="@mipmap/image_program_album"/>

                <TextView
                    android:id="@+id/RankContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="我听科技"
                    android:textColor="@color/beijing"
                    android:textSize="13sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="11dp"
                android:gravity="left|center"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/image_num"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginRight="6dp"
                    android:src="@mipmap/image_program_listener"/>

                <TextView
                    android:id="@+id/text_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/beijing"
                    android:layout_marginRight="14dp"
                    android:textSize="9sp"/>

                <ImageView
                    android:id="@+id/image_last"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginRight="6dp"
                    android:src="@mipmap/image_program_time"/>

                <TextView
                    android:id="@+id/tv_last"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="播放时长"
                    android:textColor="@color/beijing"
                    android:textSize="9sp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>