<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dinglan_orange"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择几个你喜欢的节目类型"
            android:textColor="@color/WHITE"
            android:textSize="17sp"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/text_skip"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"
            android:textSize="16sp"
            android:text="跳过"
            android:textColor="@color/WHITE"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/WHITE">

        <ImageView
            android:id="@+id/image_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_bg"/>

        <View
            android:id="@+id/view_literature"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@color/red"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"/>

        <View
            android:id="@+id/view_life"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@color/black"
            android:layout_toLeftOf="@id/view_literature"
            android:layout_below="@id/view_literature"
            android:layout_marginRight="20dp"
            android:layout_marginTop="35dp"/>

        <View
            android:id="@+id/view_joke"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@color/blue"
            android:layout_alignTop="@id/view_life"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="35dp"/>

        <View
            android:id="@+id/view_world"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@color/purple"
            android:layout_below="@id/view_joke"
            android:layout_alignRight="@id/view_life"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"/>

        <View
            android:id="@+id/view_story"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@color/green"
            android:layout_below="@id/view_world"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="45dp"/>

        <View
            android:id="@+id/view_knowledge"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@color/yellow"
            android:layout_toRightOf="@id/view_world"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/view_story"/>

        <View
            android:id="@+id/view_taste"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@color/brown"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/view_story"
            android:layout_below="@id/view_knowledge"/>

        <Button
            android:id="@+id/btn_finish"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="确定"
            android:textSize="16sp"
            android:textColor="@color/WHITE"
            android:layout_alignParentBottom="true"
            android:enabled="false"
            android:layout_margin="12dp"
            android:background="@drawable/d_btn_background"/>

    </RelativeLayout>

</LinearLayout>
