<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dinglan_orange"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/image_back"
            style="@style/LeftImageStyle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="录音"
            android:textSize="17sp"
            android:textColor="@color/WHITE"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/view_quan"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:indeterminate="false"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/linear_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="140dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/timestamp_minute_prefix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFAA00"
                android:textSize="50sp"
                android:text="0"/>

            <TextView
                android:id="@+id/timestamp_minute_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFAA00"
                android:textSize="50sp"
                android:text="0"/>

            <TextView
                android:id="@+id/text_dian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFAA00"
                android:textSize="50sp"
                android:text=":"/>

            <TextView
                android:id="@+id/timestamp_second_prefix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFAA00"
                android:textSize="50sp"
                android:text="0"/>

            <TextView
                android:id="@+id/timestamp_second_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFAA00"
                android:textSize="50sp"
                android:text="0"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/heihui"
            android:layout_above="@+id/linear_btn"/>

        <LinearLayout
            android:id="@+id/linear_btn"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/btn_play"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawableTop="@mipmap/ic_launcher"
                android:background="@color/app_bg"
                android:textColor="@color/WHITE"
                android:textStyle="bold"
                android:drawablePadding="20dp"
                android:text="播放"/>

            <Button
                android:id="@+id/btn_start"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/app_bg"
                android:drawableTop="@mipmap/ic_launcher"
                android:drawablePadding="5dp"
                android:textStyle="bold"
                android:textColor="@color/WHITE"
                android:layout_margin="5dp"
                android:text="录音"/>

            <Button
                android:id="@+id/btn_finish"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawableTop="@mipmap/ic_launcher"
                android:background="@color/app_bg"
                android:textColor="@color/WHITE"
                android:textStyle="bold"
                android:drawablePadding="20dp"
                android:text="完成"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
