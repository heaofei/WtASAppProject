<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dinglan_orange"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/wt_dinglan_high">

        <ImageView
            android:id="@+id/head_left_btn"
            style="@style/LeftImageStyle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="登录"
            android:textColor="@color/WHITE"
            android:textSize="@dimen/wt_dinglan_text_center" />

        <TextView
            android:id="@+id/btn_register"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/WHITE"
            android:textSize="@dimen/activity_head_right" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/bg_edittext_normal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/wt_edittext_default_high"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dip">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="12dp"
                    android:src="@mipmap/img_username" />

                <EditText
                    android:id="@+id/edittext_username"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/WHITE"
                    android:ems="10"
                    android:hint="手机号/用户号"
                    android:singleLine="true"
                    android:textColor="@color/wt_login_third"
                    android:textColorHint="@color/gray"
                    android:textCursorDrawable="@drawable/wt_edittext_cursor"
                    android:textSize="@dimen/wt_edittext_default_text" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/view_color" />

            <LinearLayout
                android:id="@+id/linear_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/wt_edittext_default_high"
                android:layout_below="@id/linear_name"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dip">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="12dp"
                    android:src="@mipmap/img_password" />

                <EditText
                    android:id="@+id/edittext_password"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/WHITE"
                    android:ems="10"
                    android:gravity="left|center"
                    android:hint="登录密码"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="@color/wt_login_third"
                    android:textColorHint="@color/gray"
                    android:textCursorDrawable="@drawable/wt_edittext_cursor"
                    android:textSize="@dimen/wt_edittext_default_text" />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/linear_et"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/bg_graybutton"
            android:text="登录"
            android:textColor="@color/WHITE"
            android:textSize="@dimen/wt_button_default_text" />

        <TextView
            android:id="@+id/tv_wjmm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_login"
            android:layout_centerInParent="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="40dp"
            android:text="忘记密码?"
            android:textColor="@color/black"
            android:textSize="@dimen/wt_login_text_wjmm" />

        <LinearLayout
            android:id="@+id/relative_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lin_login_wx"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="18dp"
                android:layout_weight="1"
                android:background="@drawable/zhuxiao_press"
                android:gravity="center">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/wt_login_wx" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="微信"
                    android:textColor="@color/white"
                    android:textSize="@dimen/wt_button_default_text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_login_qq"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/zhuxiao_press"
                android:gravity="center">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/wt_login_qq" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="QQ"
                    android:textColor="@color/white"
                    android:textSize="@dimen/wt_button_default_text" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_login_wb"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="18dp"
                android:layout_weight="1"
                android:background="@drawable/zhuxiao_press"
                android:gravity="center">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/wt_login_wb" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="微博"
                    android:textColor="@color/white"
                    android:textSize="@dimen/wt_button_default_text" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/relative_login"
            android:layout_marginBottom="18dp"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginLeft="18dp"
                android:layout_weight="1"
                android:background="@color/gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="其它登录方式"
                android:textColor="@color/gray"
                android:textSize="@dimen/wt_login_third_title" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginRight="18dp"
                android:layout_weight="1"
                android:background="@color/gray" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>